#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

--
-- NAME: MGI_Statistic_insert()
--
-- DESCRIPTOIN:
--
--	this insert trigger will call ACC_assignMGI
--	in order to add a distinct MGI accession id
--	to the NEW object
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

DROP TRIGGER IF EXISTS MGI_Statistic_insert_trigger ON MGI_Statistic;
DROP FUNCTION MGI_Statistic_insert();

CREATE OR REPLACE FUNCTION MGI_Statistic_insert() RETURNS TRIGGER AS \$\$
BEGIN

PERFORM ACC_assignMGI(NEW._Statistic_key, 'Statistic');

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION MGI_Statistic_insert() TO public;

CREATE TRIGGER MGI_Statistic_insert_trigger
AFTER INSERT on MGI_Statistic
FOR EACH ROW
EXECUTE PROCEDURE MGI_Statistic_insert();

COMMENT ON FUNCTION mgd.MGI_Statistic_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
