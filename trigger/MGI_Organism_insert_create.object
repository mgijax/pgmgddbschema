#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh ${MGD_DBSERVER} ${MGD_DBNAME} $0

--
-- NAME: check_MGI_Organism_insert()
--
-- DESCRIPTOIN:
--
--	this insert trigger will call ACC_assignMGI
--	in order to add a distinct MGI accession id
--	to the NEW object
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

CREATE OR REPLACE FUNCTION check_MGI_Organism_insert() RETURNS TRIGGER AS \$\$
BEGIN

SELECT ACC_assignMGI(NEW._Organism_key, 'Organism');

EXCEPTION WHEN OTHERS THEN
    RAISE EXCEPTION 'check_MGI_Organism_insert: error';

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION check_MGI_Organism_insert() TO public;

DROP TRIGGER check_MGI_Organism_insert_trigger ON MGI_Organism;

CREATE TRIGGER check_MGI_Organism_insert_trigger
AFTER INSERT on MGI_Organism
FOR EACH ROW
EXECUTE PROCEDURE check_MGI_Organism_insert();

COMMENT ON FUNCTION mgd.check_MGI_Organism_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
