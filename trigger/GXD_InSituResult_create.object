#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

--
-- NAME: GXD_InSituResult_insert()
--
-- DESCRIPTOIN:
--	
-- 1) If Strength is Absent, then Pattern must be Not Applicable.
-- 2) If Pattern is Not Applicable, then Strength must be Absent.
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

DROP TRIGGER IF EXISTS GXD_InSituResult_insert_trigger ON GXD_Genotype;
DROP FUNCTION IF EXISTS GXD_InSituResult_insert();

CREATE OR REPLACE FUNCTION GXD_InSituResult_insert() RETURNS TRIGGER AS \$\$
BEGIN

IF NEW._Strength_key = 1 AND NEW._Pattern_key != -2
THEN
    RAISE EXCEPTION E'If Strength is Absent, then Pattern must be Not Applicable.';
END IF;

IF NEW._Strength_key != 1 AND NEW._Pattern_key = -2
THEN
    RAISE EXCEPTION E'If Pattern is Not Applicable, then Strength must be Absent.';
END IF;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION GXD_InSituResult_insert() TO public;

CREATE TRIGGER GXD_InSituResult_insert_trigger
AFTER INSERT OR UPDATE ON GXD_InSituResult
FOR EACH ROW
EXECUTE PROCEDURE GXD_InSituResult_insert();

COMMENT ON FUNCTION mgd.GXD_InSituResult_insert() IS 'creates a insert trigger for gxd_gelrow';

EOSQL

