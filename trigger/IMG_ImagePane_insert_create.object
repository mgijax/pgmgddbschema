#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

--
-- NAME: IMG_ImagePane_insert()
--
-- DESCRIPTOIN:
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

DROP TRIGGER IF EXISTS IMG_ImagePane_insert_trigger ON IMG_ImagePane;
DROP FUNCTION IF EXISTS IMG_ImagePane_insert();

CREATE OR REPLACE FUNCTION IMG_ImagePane_insert() RETURNS TRIGGER AS \$\$
BEGIN

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION IMG_ImagePane_insert() TO public;

CREATE TRIGGER IMG_ImagePane_insert_trigger
AFTER INSERT ON IMG_ImagePane
FOR EACH ROW
EXECUTE PROCEDURE IMG_ImagePane_insert();

COMMENT ON FUNCTION mgd.IMG_ImagePane_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
