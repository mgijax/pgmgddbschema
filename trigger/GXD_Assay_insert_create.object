#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh ${MGD_DBSERVER} ${MGD_DBNAME} $0

--
-- NAME: check_GXD_Assay_insert()
--
-- DESCRIPTOIN:
--
--	this insert trigger will call ACC_assignMGI
--	in order to add a distinct MGI accession id
--	to the NEW object
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

CREATE OR REPLACE FUNCTION check_GXD_Assay_insert() RETURNS TRIGGER AS \$\$
BEGIN

SELECT ACC_assignMGI(NEW._Assay_key, 'Assay');

EXCEPTION WHEN OTHERS THEN
    RAISE EXCEPTION 'check_GXD_Assay_insert: error';

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION check_GXD_Assay_insert() TO public;

DROP TRIGGER check_GXD_Assay_insert_trigger ON GXD_Assay;

CREATE TRIGGER check_GXD_Assay_insert_trigger
AFTER INSERT on GXD_Assay
FOR EACH ROW
EXECUTE PROCEDURE check_GXD_Assay_insert();

COMMENT ON FUNCTION mgd.check_GXD_Assay_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
