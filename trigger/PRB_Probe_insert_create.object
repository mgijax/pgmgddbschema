#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

--
-- NAME: check_PRB_Probe_insert()
--
-- DESCRIPTOIN:
--
--	this insert trigger will call ACC_assignMGI
--	in order to add a distinct MGI accession id
--	to the NEW object
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

DROP TRIGGER check_PRB_Probe_insert_trigger ON PRB_Probe;
DROP FUNCTION check_PRB_Probe_insert();

CREATE OR REPLACE FUNCTION check_PRB_Probe_insert() RETURNS TRIGGER AS \$\$
BEGIN

PERFORM ACC_assignMGI(NEW._Probe_key, 'Segment');

EXCEPTION WHEN OTHERS THEN
    RAISE EXCEPTION 'check_PRB_Probe_insert: error';

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION check_PRB_Probe_insert() TO public;

CREATE TRIGGER check_PRB_Probe_insert_trigger
AFTER INSERT on PRB_Probe
FOR EACH ROW
EXECUTE PROCEDURE check_PRB_Probe_insert();

COMMENT ON FUNCTION mgd.check_PRB_Probe_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
