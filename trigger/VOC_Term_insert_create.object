#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

--
-- NAME: check_VOC_Term_insert()
--
-- DESCRIPTOIN:
--
--	this insert trigger will call ACC_assignMGI
--	in order to add a distinct MGI accession id
--	to the NEW object
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

DROP TRIGGER check_VOC_Term_insert_trigger ON VOC_Term;
DROP FUNCTION check_VOC_Term_insert();

CREATE OR REPLACE FUNCTION check_VOC_Term_insert() RETURNS TRIGGER AS \$\$
BEGIN

PERFORM ACC_assignMGI(NEW._Term_key, 'Vocabulary Term');

EXCEPTION WHEN OTHERS THEN
    RAISE EXCEPTION 'check_VOC_Term_insert: error';

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION check_VOC_Term_insert() TO public;

CREATE TRIGGER check_VOC_Term_insert_trigger
AFTER INSERT on VOC_Term
FOR EACH ROW
EXECUTE PROCEDURE check_VOC_Term_insert();

COMMENT ON FUNCTION mgd.check_VOC_Term_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
