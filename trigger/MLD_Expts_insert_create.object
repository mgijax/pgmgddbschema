#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh ${MGD_DBSERVER} ${MGD_DBNAME} $0

--
-- NAME: check_MLD_Expts_insert()
--
-- DESCRIPTOIN:
--
--	this insert trigger will call ACC_assignMGI
--	in order to add a distinct MGI accession id
--	to the NEW object
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

CREATE OR REPLACE FUNCTION check_MLD_Expts_insert() RETURNS TRIGGER AS \$\$
BEGIN

SELECT ACC_assignMGI(NEW._Expt_key, 'Experiment');

EXCEPTION WHEN OTHERS THEN
    RAISE EXCEPTION 'check_MLD_Expts_insert: error';

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION check_MLD_Expts_insert() TO public;

DROP TRIGGER check_MLD_Expts_insert_trigger ON MLD_Expts;

CREATE TRIGGER check_MLD_Expts_insert_trigger
AFTER INSERT on MLD_Expts
FOR EACH ROW
EXECUTE PROCEDURE check_MLD_Expts_insert();

COMMENT ON FUNCTION mgd.check_MLD_Expts_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
