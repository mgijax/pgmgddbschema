#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh ${MGD_DBSERVER} ${MGD_DBNAME} $0

--
-- NAME: check_NOM_Marker_insert()
--
-- DESCRIPTOIN:
--
--      this insert trigger will call ACC_assignMGI
--      in order to add a distinct MGI accession id
--      to the NEW object
--	and includes the setting of the "private" variable
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

CREATE OR REPLACE FUNCTION check_NOM_Marker_insert() RETURNS TRIGGER AS \$\$
BEGIN

SELECT ACC_assignMGI(NEW._Nomen_key, 'Nomenclature', true);

EXCEPTION WHEN OTHERS THEN
    RAISE EXCEPTION 'check_NOM_Marker_insert: error';

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION check_NOM_Marker_insert() TO public;

DROP TRIGGER check_NOM_Marker_insert_trigger ON NOM_Marker;

CREATE TRIGGER check_NOM_Marker_insert_trigger
AFTER INSERT on NOM_Marker
FOR EACH ROW
EXECUTE PROCEDURE check_NOM_Marker_insert();

COMMENT ON FUNCTION mgd.check_NOM_Marker_insert() IS 'creates an insert trigger to call acc_assignmgi()/set private value';

EOSQL
