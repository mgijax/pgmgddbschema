#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

--
-- NAME: check_GXD_Structure_insert()
--
-- DESCRIPTOIN:
--
--	this insert trigger will call ACC_assignMGI
--	in order to add a distinct MGI accession id
--	to the NEW object
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

DROP TRIGGER check_GXD_Structure_insert_trigger ON GXD_Structure;
DROP FUNCTION check_GXD_Structure_insert();

CREATE OR REPLACE FUNCTION check_GXD_Structure_insert() RETURNS TRIGGER AS \$\$
BEGIN

SELECT ACC_assignMGI(NEW._Structure_key, 'GXD Structures');

EXCEPTION WHEN OTHERS THEN
    RAISE EXCEPTION 'check_GXD_Structure_insert: error';

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION check_GXD_Structure_insert() TO public;

CREATE TRIGGER check_GXD_Structure_insert_trigger
AFTER INSERT on GXD_Structure
FOR EACH ROW
EXECUTE PROCEDURE check_GXD_Structure_insert();

COMMENT ON FUNCTION mgd.check_GXD_Structure_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
