#!/bin/sh

cd `dirname $0` && . ./Configuration

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

--
-- NAME: SEQ_Sequence_insert()
--
-- DESCRIPTOIN:
--
--	this insert trigger will call ACC_assignMGI
--	in order to add a distinct MGI accession id
--	to the NEW object
--
-- INPUT:
--	none
--
-- RETURNS:
--	NEW
--

DROP TRIGGER IF EXISTS SEQ_Sequence_insert_trigger ON SEQ_Sequence;
DROP FUNCTION IF EXISTS SEQ_Sequence_insert();

CREATE OR REPLACE FUNCTION SEQ_Sequence_insert() RETURNS TRIGGER AS \$\$
BEGIN

PERFORM ACC_assignMGI(1001, NEW._Sequence_key, 'Sequence');

RETURN NEW;

END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION SEQ_Sequence_insert() TO public;

CREATE TRIGGER SEQ_Sequence_insert_trigger
AFTER INSERT ON SEQ_Sequence
FOR EACH ROW
EXECUTE PROCEDURE SEQ_Sequence_insert();

COMMENT ON FUNCTION mgd.SEQ_Sequence_insert() IS 'creates an insert trigger to call acc_assignmgi()/default values';

EOSQL
