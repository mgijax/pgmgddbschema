#!/bin/sh

cd `dirname $0` && . ./Configuration

${PG_MGD_DBSCHEMADIR}/view/GXD_Assay_TemplateD_drop.object

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

create view mgd.GXD_Assay_TemplateD_View
as

-- >=1 symbol per specimen
-- different assay
-- different symbol

WITH goodspecimens AS (
select s1.sequenceNum, s1._specimen_key, s1.specimenlabel, a1._assay_key, a1._assaytype_key, a1._refs_key, a1._marker_key
from gxd_assay a1,
gxd_specimen s1, gxd_insituresult gs1, gxd_insituresultimage gi1,
gxd_assay a2, acc_accession ea2, mrk_marker m2,
gxd_specimen s2, gxd_insituresult gs2, gxd_insituresultimage gi2
where a1._assaytype_key in (1,6,9)
and a1._assay_key = s1._assay_key
and s1._specimen_key = gs1._specimen_key
and gs1._result_key = gi1._result_key
and a2._assay_key = ea2._object_key
and ea2._mgitype_key = 8
and ea2._logicaldb_key = 1
and ea2.preferred = 1
and a2._marker_key = m2._marker_key
and a2._assaytype_key in (1,6,9)
and a2._assay_key = s2._assay_key
and s2._specimen_key = gs2._specimen_key
and gs2._result_key = gi2._result_key
and a1._refs_key = a2._refs_key
and gi1._imagepane_key = gi2._imagepane_key
and a1._assay_key != ea2._object_key
and a1._marker_key != a2._marker_key
group by s1.sequenceNum, s1._specimen_key, s1.specimenlabel, a1._assay_key, a1._assaytype_key, a1._refs_key, a1._marker_key having count(*) >= 1
)
select distinct ss.sequenceNum, ss._specimen_key, ss.specimenlabel, ss._assay_key, ss._assaytype_key, ea2._object_key, ea2.accid, ss._marker_key, m2.symbol
from goodspecimens ss,
gxd_insituresult gs1, gxd_insituresultimage gi1,
gxd_assay a2, acc_accession ea2, mrk_marker m2,
gxd_specimen s2, gxd_insituresult gs2, gxd_insituresultimage gi2
where ss._specimen_key = gs1._specimen_key
and gs1._result_key = gi1._result_key
and a2._assay_key = ea2._object_key
and ea2._mgitype_key = 8
and ea2._logicaldb_key = 1
and ea2.preferred = 1
and a2._marker_key = m2._marker_key
and a2._assaytype_key in (1,6,9)
and a2._assay_key = s2._assay_key
and s2._specimen_key = gs2._specimen_key
and gs2._result_key = gi2._result_key
and ss._refs_key = a2._refs_key
and gi1._imagepane_key = gi2._imagepane_key
and ss._assay_key != ea2._object_key
and ss._marker_key != a2._marker_key
order by ss.sequenceNum
;

EOSQL
