#!/bin/sh

# HISTORY
#   10/03/2008 - jsb - added for gene trap LF (TR7493) release
#

cd `dirname $0` && . ./Configuration


cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

create view mgd.MAP_Feature_View
as
select f._MGIType_key,
	f._Object_key, 
	m.chromosome,
	m.sequenceNum as chromosomeOrder,
	f.strand,
	f.startCoordinate,
	f.endCoordinate,
	c._MapType_key,
	c._Units_key,
	cc.name as collection,
	f._Feature_key,
	c._Map_key,
	cc._Collection_key
from MAP_Coord_Feature f,
	MAP_Coordinate c, 
	MAP_Coord_Collection cc,
	MRK_Chromosome m
where f._Map_key = c._Map_key
	and c._Collection_key = cc._Collection_key
	and c._MGIType_key = 27				-- chromosome
	and c._Object_key = m._Chromosome_key


;

EOSQL
