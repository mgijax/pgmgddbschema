cd `dirname $0` && . ./Configuration

${PG_MGD_DBSCHEMADIR}/procedure/MGI_processNote_drop.object

cat - <<EOSQL | ${PG_DBUTILS}/bin/doisql.csh $0

CREATE OR REPLACE FUNCTION MGI_processNote (
v_userKey int,
v_note_key int,
v_objectKey int,
v_mgiTypeKey int,
v_noteTypeKey int,
v_note mgi_notechunk.note%TYPE
)
RETURNS VOID AS
\$\$

DECLARE
v_noteKey int;

BEGIN

IF v_note_key IS NULL
THEN
	v_noteKey := max(_note_key) + 1 from MGI_Note;

	INSERT INTO MGI_Note
	(_Note_key, _Object_key, _MGIType_key, _NoteType_key, 
	 _CreatedBy_key, _ModifiedBy_key, creation_date, modification_date)
	VALUES (v_noteKey, v_objectKey, v_mgiTypeKey, v_noteTypeKey,
		v_userKey, v_userKey, now(), now());

	INSERT INTO MGI_NoteChunk
	(_Note_key, sequenceNum, note, _CreatedBy_key, _ModifiedBy_key, creation_date, modification_date)
	VALUES (v_noteKey, 1, v_note, v_userKey, v_userKey, now(), now());

ELSEIF v_note IS NULL or v_note = 'null'
THEN

	DELETE FROM MGI_Note where _Note_key = v_note_key;

ELSE

        UPDATE MGI_NoteChunk
	SET note = v_note, _ModifiedBy_key = v_userKey, modification_date = now()
	WHERE _Note_key = v_note_key;

END IF;


END;
\$\$
LANGUAGE plpgsql;

GRANT EXECUTE ON FUNCTION MGI_processNote(int,int,int,int,int,text) TO public;

COMMENT ON FUNCTION mgd.MGI_processNote(int,int,int,int,int,text) IS 'create a new note in the mgi_note/mgi_notechunk table';

EOSQL
